@using Microsoft.AspNetCore.Identity;
@model IEnumerable<IdentityRole>

<div class="container">
    <div class="row">    
        <div class="col-12">
            <br/>
            <a href="/Admin/CreateRole" class="btn btn-success">Rol Oluştur</a>
            <table class="table table-bordered" style="margin-top:25px;">
                <tr>
                    <th>ID</th>
                    <th>Role</th>
                    <th>Düzenle</th>
                   
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td style="width:350px;">@item.Name</td> 
                        <td  style="width:350px;"><a href="/Admin/EditRole/@item.Id" class="btn btn-warning">Düzenle</a></td>                     
                    </tr>

                }
            </table>
        </div>
    </div>
</div>

