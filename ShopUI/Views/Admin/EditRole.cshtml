@model RoleDetail

    <div class="container" style="margin-top:30px;">


        <div class="row">
            <div class="col-2"></div>
            <div class="col-8">
                <form asp-controller="Admin" asp-action="EditRole" method="post">
                   
                    <input type="hidden" name="RoleName" value="@Model.Role.Name" />
                    <h6 class="bg-info text-white p-1"> @Model.Role.Name Rolüne Ata</h6>
                    <table class="table table-bordered">
                        @if (Model.NonMembers.Count() == 0)
                        {
                            <tr>
                                <td>Bütün  kullancılar bu role aittir</td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var user in Model.NonMembers)
                            {
                                <tr>
                                    <td>@user.UserName</td>
                                    <td>
                                        <input type="checkbox" name="IdsToAdd" value="@user.Id" />
                                    </td>
                                </tr>
                            }
                        }
                    </table>
                    <hr /><hr />
                    <h6 class="bg-info text-white p-1">@Model.Role.Name Rolünden Çıkar</h6>
                    <table class="table table-bordered">
                        @if (Model.Members.Count() == 0)
                        {
                            <tr>
                                <td>Bu role ait kullanıcı yok</td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var user in Model.Members)
                            {
                                <tr>
                                    <td>@user.UserName</td>
                                    <td>
                                        <input type="checkbox" name="IdsToRemove" value="@user.Id" />
                                    </td>
                                </tr>
                            }
                        }
                    </table>
                    <input type="submit" class="btn btn-info" value="Değişiklikleri Kaydet" />
                </form>
            </div>
        </div>
        <div class="col-2"></div>
    </div>