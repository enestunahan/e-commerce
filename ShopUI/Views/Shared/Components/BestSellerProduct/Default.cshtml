
@using Shop.Entities.Concrete;
@model List<Product>


    <h1 style="text-align:center; margin-right:20px; color:green; width:200px;">Çok Satanlar<i class="fas fa-check-circle" style="margin-left:10px;"></i></h1>

    <ul class="list-group" >
        @foreach (var item in Model)
        {
            <li class="list-group-item" style="margin-top:20px; border:3px solid green; border-top-right-radius:50px; border-bottom-left-radius:50px; background-color:green; color:black; text-align:center;"><a href="/Home/ProductDetail/@item.ProductId" style="color:aliceblue; text-decoration:none; font-weight:bold;">@item.Name</a></li>
        }

    </ul>

 