@model ProductListViewModel

@foreach(var item in Model.Products)
{
<div class="col-4" style="width:100%; float:left; margin-top:30px;">
    <div class="card" style="width: 15rem;">
        <img src="@item.ImageUrl" class="card-img-top" alt="..." style="width:100%;height:150px;">
        <div class="card-body" style="height:140px; text-align:center;">
            <h5 class="card-title" style="font-weight:bold;">@item.Name</h5>
            <p class="card-text" style="font-size:12px;">@item.Description</p>
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item" style="float:left; display:inline;">@item.Price.ToString("c")</li>
        </ul>
        <div class="card-body">
            <a href="/Home/ProductDetail/@item.ProductId" class="btn btn-info" style="width:100%; height:100%;">Ürünü İncele</a>
        </div>
    </div>
</div>
}
