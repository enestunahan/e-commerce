@model RegisterModel



<div class="row">
    <div class="col-4"></div>
    <div class="col-4">
        <form asp-controller="Account" asp-action="Register" method="post" style="background-color:aliceblue; padding-left:35px; padding-right:35px; margin-top:25px;">
            <div class="form-group row">
                <label style="font-size:20px; font-weight:bold; color:black;"> Ad </label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label style="font-size:20px; font-weight:bold; color:black;"> Soyad </label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label style="font-size:20px; font-weight:bold; color:black;"> Kullanıcı Adı </label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label style="font-size:20px; font-weight:bold; color:black;"> Şifre </label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label style="font-size:20px; font-weight:bold; color:black;"> Şifre Tekrar </label>
                <input asp-for="RePassword" class="form-control" />
                <span asp-validation-for="RePassword" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label style="font-size:20px; font-weight:bold; color:black;"> Email </label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <input type="submit" class="form-control btn btn-success" value="Kayıt Ol" />
            </div>
        </form>
    </div>
    <div class="col-4"></div>
</div>



